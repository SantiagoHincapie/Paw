<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogUp.LogUpEspecificaciones"
    android:background="@color/main_orange"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="478dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/rounded_back_withe"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="16dp">

        <EditText
            android:id="@+id/edtEdadMascota"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_elements_orange"
            android:hint="Edad mascota:"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="25dp"></EditText>

        <EditText
            android:id="@+id/edtRazaMascota"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_elements_orange"
            android:hint="Raza:"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="25dp"></EditText>

        <EditText
            android:id="@+id/edtPersonalidadMascota"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_elements_orange"
            android:hint="Personalidad:"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="25dp"></EditText>

        <EditText
            android:id="@+id/edtConcentradoMascota"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_elements_orange"
            android:hint="Concentrado:"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:textSize="25dp"></EditText>

        <Button
            android:id="@+id/btnEditartEspecifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/blue"
            android:text="Editar"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>